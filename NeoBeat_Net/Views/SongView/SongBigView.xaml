<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeoBeat_Net.Views.SongView.SongBigView">
    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="5">
        <Border Grid.Column="0" 
                StrokeShape="10" 
                WidthRequest="125" 
                HeightRequest="125" 
                HorizontalOptions="Start">
            <Image Source="{Binding Song.SongImage}"/>
        </Border>
                    
        <VerticalStackLayout Grid.Column="1"
                             Margin="0,10">
            <Label Text="{Binding Song.Name}"
                   FontSize="28"
                   FontAttributes="Bold"
                   FontFamily="UbuntuBold"
                   TextColor="{AppThemeBinding Dark={StaticResource DarkText}, Light={StaticResource LightText}}"
                   HorizontalOptions="End"/>
            <Label Text="{Binding Song.Artist.ArtisticName}"
                   FontSize="20"
                   FontAttributes="Bold"
                   FontFamily="UbuntuBold"
                   TextColor="{AppThemeBinding Dark={StaticResource DarkText}, Light={StaticResource LightText}}"
                   HorizontalOptions="End"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>